<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_bkg_white" >

    <ImageView
        android:id="@+id/sound_vis_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/sound_vis" />

    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stop_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bkg_white"
        android:src="@drawable/record_button" />

    <ImageButton
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play_button"
        android:layout_toRightOf="@+id/record_button"
        android:background="@drawable/btn_bkg_white"
        android:src="@drawable/stop_button" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound_vis_record"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/record_button"
        android:background="@drawable/btn_bkg_white"
        android:src="@drawable/play_button" />

</RelativeLayout>
